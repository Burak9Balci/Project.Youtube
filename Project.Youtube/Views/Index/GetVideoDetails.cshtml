@{
    ViewData["Title"] = "YouTube API Integration";
}

<h2>Get Video Details</h2>

<form method="post" asp-action="GetVideoDetails">
    <label for="videoId">Video ID:</label>
    <input type="text" name="videoId" required />
    <br />
    <label for="apiKey">API Key:</label>
    <input type="text" name="apiKey" required />
    <br />
    <button type="submit">Get Details</button>
</form>

@if (ViewData["VideoDetails"] != null)
{
    <h3>Video Details:</h3>
    <pre>@Html.Raw(ViewData["VideoDetails"])</pre>
}

@if (ViewData["Error"] != null)
{
    <p style="color: red;">Error: @ViewData["Error"]</p>
}
